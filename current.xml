		<link>https://firenews.com.tw/2025/10/31/%e8%b2%93%e5%92%aa%e7%99%bc%e6%83%85%e6%9c%9f%e7%9a%84%e3%80%8c%e4%ba%94%e5%80%8b%e8%a1%8c%e7%82%ba%e3%80%8d%ef%bc%81%e8%b7%a1%e8%b1%a1%e5%87%ba%e7%8f%be%e6%9c%80%e5%a5%bd%e8%b6%81%e6%97%a9%e8%a7%a3/</link>
		
