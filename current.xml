		<link>https://firenews.com.tw/2025/10/07/%e5%ac%b0%e5%85%92%e4%b8%80%e5%93%ad-%e7%8b%97%e7%8b%97%e4%b9%9f%e7%b7%8a%e5%bc%b5%ef%bc%9f%e8%a7%a3%e5%af%86%e7%89%a0%e5%80%91%e5%b0%8d%e3%80%8c%e5%b0%8f%e5%ad%a9%e5%93%ad%e8%81%b2%e3%80%8d%e7%9a%84/</link>
		
