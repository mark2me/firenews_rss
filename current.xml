		<link>https://firenews.com.tw/2025/10/17/%e3%80%8c2025%e5%8f%b0%e7%81%a3%e5%8d%93%e8%b6%8a%e5%8d%b0%e5%88%b7%e8%a8%ad%e8%a8%88%e5%b1%95%e3%80%8d%e4%b8%8d%e5%9c%a8%e5%b0%8d%e4%bd%8d%ef%bc%8c%e7%bf%bb%e8%bd%89%e5%8d%b0%e5%88%b7%e8%a8%ad/</link>
		
