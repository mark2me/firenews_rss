		<link>https://firenews.com.tw/2025/10/02/%e7%8b%97%e7%8b%97%e7%95%8c%e6%90%ad%e8%a8%95%e5%a4%a7%e5%b8%ab%ef%bc%9f%e5%a5%b3%e5%ad%90%e9%81%ad%e9%87%91%e6%af%9b%e7%8a%ac%e7%8c%9b%e7%9b%af%e7%aa%81%e7%84%b6%e6%84%9f%e5%88%b0%e8%83%8c%e5%be%8c/</link>
		
