		<link>https://firenews.com.tw/2025/10/03/%e8%b6%85%e5%95%86%e5%89%9b%e9%96%8b%e5%b9%95%e9%ad%9a%e4%b9%be%e5%b0%b1%e9%81%ad%e7%ab%8a%ef%bc%9f%e5%ba%97%e9%95%b7%e8%aa%bf%e7%9b%a3%e8%a6%96%e5%99%a8%e7%99%bc%e7%8f%be%e8%b6%85%e5%82%bb%e7%9c%bc/</link>
		
