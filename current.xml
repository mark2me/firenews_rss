		<link>https://firenews.com.tw/2025/10/03/%e8%b2%93%e5%92%aa%e6%8c%91%e9%a3%9f%e8%a9%b2%e6%80%8e%e9%ba%bc%e8%be%a6%ef%bc%9f%e9%80%99%e3%80%8c%e4%ba%94%e5%a4%a7%e5%8e%9f%e5%9b%a0%e3%80%8d%e8%88%87%e8%a7%a3%e6%b1%ba%e6%96%b9%e5%bc%8f%e9%a3%bc/</link>
		
