		<link>https://firenews.com.tw/2025/10/28/%e6%9c%89%e6%88%90%e7%b2%be%e5%af%86winaico%e6%89%93%e4%ba%ae2025%e5%8d%97%e6%b8%af%e6%b7%a8%e9%9b%b6%e5%b1%95%e7%84%a6%e9%bb%9e%e3%80%80%e8%83%8c%e6%8e%a5%e8%a7%b8%e5%bc%8f%e6%a8%a1%e7%b5%84%e8%88%87/</link>
		
		<dc:creator><![CDATA[火報]]></dc:creator>
		<pubDate>Tue, 28 Oct 2025 00:00:00 +0000</pubDate>
				<category><![CDATA[其他]]></category>
