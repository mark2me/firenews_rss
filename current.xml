		<link>https://firenews.com.tw/2025/09/23/%e8%8b%b1%e7%be%8e%e9%87%91%e8%9e%8d%e5%90%88%e4%bd%9c%e5%8d%87%e7%b4%9a%ef%bc%81%e7%b0%a1%e5%8c%96%e8%b3%87%e6%9c%ac%e5%b8%82%e5%a0%b4%e5%87%86%e5%85%a5%e4%b8%a6%e6%8e%a8%e5%8b%95%e5%8a%a0%e5%af%86/</link>
		
