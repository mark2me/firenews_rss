		<link>https://firenews.com.tw/2025/10/10/%e9%a4%8a%e7%8b%97%e4%b9%9f%e8%83%bd%e7%99%bc%e5%a4%a7%e8%b2%a1%ef%bc%9f%e6%b3%95%e9%ac%a5%e6%af%8f%e5%a4%a9%e6%92%bf%e5%af%b6%e7%89%b9%e7%93%b6%e5%b9%ab%e4%b8%bb%e4%ba%ba%e8%b3%ba%e4%b8%8a%e8%90%ac/</link>
		
