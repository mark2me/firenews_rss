		<link>https://firenews.com.tw/2025/08/11/%e8%b2%93%e5%92%aa%e6%84%9b%e4%bd%a0%e7%9a%84%e3%80%8c6%e5%80%8b%e3%80%8d%e6%9a%97%e8%99%9f%ef%bc%81%e8%ad%89%e6%98%8e%e7%89%a0%e6%8a%8a%e4%bd%a0%e7%95%b6%e6%9c%80%e8%a6%aa%e5%af%86%e7%9a%84%e4%ba%ba/</link>
		
