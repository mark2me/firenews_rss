		<link>https://firenews.com.tw/2025/10/22/%e7%b6%b2%e5%8f%8b%e7%9b%a4%e9%bb%9e%e5%8f%b2%e8%a9%a9%e7%b4%9a%e6%9a%88%e8%88%b9%e4%bb%94%e6%8e%80%e5%9b%9e%e6%86%b6%e6%ae%ba%e3%80%80%e7%b6%93%e5%85%b8%e4%ba%ba%e7%89%a9%e4%b8%b2%e5%87%ba%e6%b5%aa/</link>
		
